generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id          String   @id @default(cuid())
  fullName    String
  email       String
  company     String?
  service     String
  message     String
  budget      String?
  createdAt   DateTime @default(now())
  isContacted Boolean  @default(false)

  @@index([createdAt(sort: Desc)])
  @@index([email])
}
